<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Housemates App</title>
    <link rel="icon" type="image/ico" href="images/logo.ico"/>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,700,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/dashboard.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
    <script src="js/script_bill_add.js"></script>

  </head>
  <body>
    <div class="menu">
      <div id="settings">
        <a href="/settings"><img src="images/icon_settings.png" width="50px"></a>
      </div>
      <div id="logout"><a href="/logout">Logout</a></div>
      <div id="username">
        <%= user.name %>
      </div> <!-- username -->
      <div id="title">
        <a href="/dashboard">Homies</a>
      </div> <!-- title -->
    </div> <!-- menu -->

    <div class="wrapper">
      <div class="sidebar">
         <a href="/dashboard" class="tooltip" title="DASHBOARD"><img src="images/sidebar-icon_house.png" title=""></a>
        <a href="/chores" class="tooltip" title="CHORES"><img src="images/sidebar-icon_chores.png" title=""></a>
        <a href="/bills" class="tooltip" title="BILLS"><img src="images/sidebar-icon_bills.png" title=""></a>
        <a href="/calendar" class="tooltip" title="CALENDAR"><img src="images/sidebar-icon_cal.png" title=""></a>
        <a href="/grocery" class="tooltip" title="GROCERY"><img src="images/sidebar-icon_grocery.png" title=""></a>
        <a href="/chat" class="tooltip" title="CHAT"><img src="images/sidebar-icon_chat.png" title=""></a>
      </div> <!-- sidebar -->


      <div class="content-dash">
        <form action="/bill_add_new" method="post">
          Bill Name: <input id="bill_name" name ="bill_name" type="text" placeholder="Bill Name"/><br>
          Total Amount of Bill: <input id="amount" name="amount" type="text" placeholder="Amount"/><br>
          Date Paid: <input id="date" name="date" type="date" placeholder="MM/DD/YYYY"><br>
          Paid By: <select id="user_name" name="user_name"> 
            <% for(var i=0; i<members.length; i++) {%>
             <option value="<%= members[i] %>"> <%= members[i] %> </option>
          <% } %><br>
          </select><br>
          Charge To: <br>
          <% for(var i=0; i<members.length; i++) {%>
           <input type="checkbox" value="<%= members[i] %>" name="payer" class="payer_class" checked><%= members[i] %> <br>
          <% } %><br>
          <input id="partial_amount" name="partial_amount" type="hidden" placeholder="Partial Amount"/><br>
          <input id="bill-formb"  type="submit" value="Add Bill"/>
        </form>

        <div id="test" style="color:blue">.</div>

        <br><br>
      <a href="/bills">Back to Bill Management</a>
      </div> <!-- content-dash -->
    </div> <!-- wrapper -->
  </body>
</html>