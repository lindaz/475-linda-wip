    <div class="wrapper">
      <div class="sidebar">
         <a href="/dashboard" class="tooltip" title="DASHBOARD"><img src="images/sidebar-icon_house.png" title=""></a>
        <a href="/chores" class="tooltip" title="CHORES"><img src="images/sidebar-icon_chores.png" title=""></a>
        <a href="/bills" class="tooltip" title="BILLS"><img src="images/sidebar-icon_bills.png" title=""></a>
        <a href="/calendar" class="tooltip" title="CALENDAR"><img src="images/sidebar-icon_cal.png" title=""></a>
        <a href="/grocery" class="tooltip" title="GROCERY"><img src="images/sidebar-icon_grocery.png" title=""></a>
        <a href="/chat" class="tooltip" title="CHAT"><img src="images/sidebar-icon_chat.png" title=""></a>
      </div> <!-- sidebar -->


      <div class="content-dash content-bills">
        <h1>Bill Management</h1>
        <form class="form" method="post" action="/bill_add_pg">
          <button type="submit" class="btn btn-primary"> Add Bill</button>
        </form>

        <div id="all-bills">
        <div id="my-balance"></div>

        <div class="tabs">
            <ul class="tab-links">
                <li class="active"><a href="#tab1">What I Owe</a></li>
                <li><a href="#tab2">Owed to Me</a></li>
                <li><a href="#tab3">Payment History</a></li>
                <li><a href="#tab4">Others' Payments</a></li>
                <li><a href="#tab5">Balances</a></li>
            </ul>

            <div class="tab-content">
              <div id = "tab1" class="tab">
                <div id="tab-heading">What I Owe</div>
                <div id="my-payments">
                  <br><i>You currently don't owe any money.</i>
                </div>
              </div>
              <div id = "tab2" class="tab">
                <div id="tab-heading">What People Owe Me</div>
                <div id="pay-to-me">
                  <br><i>Others currently owe you any money.</i>
              </div>
              </div>
              <div id="tab3" class="tab">
                <div id="tab-heading">Payment History</div>
                <div id="my-past-payments">
                  <br><i>You have no payment history.</i>
                </div>
              </div>
              <div id="tab4" class="tab">
                <div id="tab-heading">Others' Payments to Each Other</div>
                <div id="their-payments">
                  <br><i>Others currently owe each other nothing.</i>
                </div>
              </div>
              <div id="tab5" class="tab">
                <div id="tab-heading">Balances</div>
                <div id="total-balance">
                </div>
              </div>
            </div>
        </div>

